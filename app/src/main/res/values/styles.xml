<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Azul</item>
        <item name="colorPrimaryDark">@color/AzulOscuro</item>
        <item name="colorAccent">@color/Azul</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item" parent="parent">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dim_10</item>
        <item name="android:textColor">@color/Negro</item>
    </style>

    <style name="boton" parent="parent">
        <item name="android:background">@color/Azul</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Blanco</item>
    </style>
</resources>
