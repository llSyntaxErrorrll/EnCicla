<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/parent"
    android:elevation="@dimen/dim_5"
    app:cardCornerRadius="@dimen/dim_5"
    app:cardUseCompatPadding="true">

    <LinearLayout
        style="@style/parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/elemt_picture"
            style="@style/item"
            android:layout_height="@dimen/dim_200"/>

        <LinearLayout
            style="@style/parent"
            android:orientation="horizontal">

            <TextView
                style="@style/item"
                android:text="Nombre:" />

            <TextView
                android:id="@+id/elemt_name"
                style="@style/item" />
        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:orientation="horizontal">

            <TextView
                style="@style/item"
                android:text="Dirección:" />

            <TextView
                android:id="@+id/elemt_adress"
                style="@style/item" />
        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:orientation="horizontal">

            <TextView
                style="@style/item"
                android:text="Descripción:" />

            <TextView
                android:id="@+id/elemt_descripcion"
                style="@style/item" />
        </LinearLayout>

        <Button
            android:id="@+id/elemt_ubica"
            style="@style/boton"
            android:text="@string/ver_ubica" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
